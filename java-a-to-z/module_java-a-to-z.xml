<?xml version="1.0" encoding="UTF-8"?>
<project name="module_java-a-to-z" default="compile.module.java-a-to-z">
  <dirname property="module.java-a-to-z.basedir" file="${ant.file.module_java-a-to-z}"/>
  
  <property name="module.jdk.home.java-a-to-z" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.java-a-to-z" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.java-a-to-z" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.java-a-to-z" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="java-a-to-z.output.dir" value="${module.java-a-to-z.basedir}/target/classes"/>
  <property name="java-a-to-z.testoutput.dir" value="${module.java-a-to-z.basedir}/target/test-classes"/>
  
  <path id="java-a-to-z.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="java-a-to-z.module.production.classpath">
    <path refid="${module.jdk.classpath.java-a-to-z}"/>
  </path>
  
  <path id="java-a-to-z.runtime.production.module.classpath">
    <pathelement location="${java-a-to-z.output.dir}"/>
  </path>
  
  <path id="java-a-to-z.module.classpath">
    <path refid="${module.jdk.classpath.java-a-to-z}"/>
    <pathelement location="${java-a-to-z.output.dir}"/>
  </path>
  
  <path id="java-a-to-z.runtime.module.classpath">
    <pathelement location="${java-a-to-z.testoutput.dir}"/>
    <pathelement location="${java-a-to-z.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.java-a-to-z">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.java-a-to-z">
    <patternset refid="excluded.from.module.java-a-to-z"/>
  </patternset>
  
  <path id="java-a-to-z.module.sourcepath">
    <dirset dir="${module.java-a-to-z.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.java-a-to-z" depends="compile.module.java-a-to-z.production,compile.module.java-a-to-z.tests" description="Compile module java-a-to-z"/>
  
  <target name="compile.module.java-a-to-z.production" depends="register.custom.compilers" description="Compile module java-a-to-z; production classes">
    <mkdir dir="${java-a-to-z.output.dir}"/>
    <javac2 destdir="${java-a-to-z.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.java-a-to-z}/javac">
      <compilerarg line="${compiler.args.java-a-to-z}"/>
      <bootclasspath refid="java-a-to-z.module.bootclasspath"/>
      <classpath refid="java-a-to-z.module.production.classpath"/>
      <src refid="java-a-to-z.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.java-a-to-z"/>
    </javac2>
    
    <copy todir="${java-a-to-z.output.dir}">
      <fileset dir="${module.java-a-to-z.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.java-a-to-z.tests" depends="register.custom.compilers,compile.module.java-a-to-z.production" description="compile module java-a-to-z; test classes" unless="skip.tests"/>
  
  <target name="clean.module.java-a-to-z" description="cleanup module">
    <delete dir="${java-a-to-z.output.dir}"/>
    <delete dir="${java-a-to-z.testoutput.dir}"/>
  </target>
</project>